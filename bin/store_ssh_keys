# TODO/Idea: What about creating ssh keys before a system is created the
# first time?
set -e
set -x

. common

for REMOTE in $@
do
   ARC_DIR=$(arc_dir $REMOTE)
   mkdir -p $ARC_DIR

   remote_cp_1st_to_2nd -p "root@$REMOTE:/etc/ssh/ssh_host_*key*" $ARC_DIR\
       || true
done
