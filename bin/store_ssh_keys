# TODO/Idea: What about creating ssh keys before a system is created the
# first time?
set -e
set -x

. common

for REMOTE in $@
do
   ARC_DIR=$(arc_dir $REMOTE)
   mkdir -p $ARC_DIR

   # XXX: Modern distributions contain more keys, permissions need to be
   #      preserved!
   for I in ssh_host_dsa_key ssh_host_key ssh_host_rsa_key\
      ssh_host_dsa_key.pub ssh_host_key.pub ssh_host_rsa_key.pub
   do
      remote_cp_1st_to_2nd root@$REMOTE:/etc/ssh/$I $ARC_DIR || true
   done
done
